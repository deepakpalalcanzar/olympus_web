	<!--Other settings -->
	<div class="other-mod">

		<label>Other Settings</label>

		<hr><br>

		<!--Google Drive Settings -->
		<div id="gdrive_cont" class="email-mod">
			<label>Google Drive Settings</label>
			<input id="gdrive_setting" type="checkbox" name="gdrive_setting" value="enabled" /> Enable Syncing of Google Drive Folders
			<br>
			<div id="google_drive_details" style="display:none;">
				<label> UPLOAD TOKEN FILE HERE(client_secret.json) :</label>
				<input type="file" value="TEST" id="drive_secret_file" name="drive_secret_file"><br><br>
				<label> Client ID : </label>
				<input type="text" class="gdrive-client-id" placeholder="" value="" id="gdrive_client_id" name="gdrive_client_id"><br>

				<!--<label> Project ID :</label>-->
				<input type="hidden" class="gdrive-project-id" placeholder="" value="" id="gdrive_project_id" name="gdrive_project_id">

				<!--<label> Auth URI : </label>-->
				<input type="hidden" class="gdrive-auth-uri" placeholder="" value="" id="gdrive_auth_uri" name="gdrive_auth_uri">

				<!--<label> Token URI : </label>-->
				<input type="hidden" class="gdrive-token-uri" placeholder="" value="" id="gdrive_token_uri" name="gdrive_token_uri">

				<!--<label> Auth Provider : </label>-->
				<input type="hidden" class="gdrive-auth-x509" placeholder="" value="" id="gdrive_auth_x509" name="gdrive_auth_x509">

				<label> Client Secret : </label>
				<input type="text" class="gdrive-client-secret" placeholder="" value="" id="gdrive_client_secret" name="gdrive_client_secret"><br>

				<label> Redirect URI : </label>
				<input type="text" class="gdrive-redirect-uri" placeholder="" value="" id="gdrive_redirect_uri" name="gdrive_redirect_uri"><br>
			</div>
		    <input type="button" id="saveDrive" value="Save">
			<img class="gdrive-loader" alt="loading..." src="/images/ajax-loader.gif">
			<br><br>
		</div>
