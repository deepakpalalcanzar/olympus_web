	<!--Adapter Settings -->
	<div class="adapter-mod">
		<label>Adapter Settings</label>

		<input type="radio" name="adapter_type" id="adapter_type_disk" value="Disk" />
		<label class="adapter-label" for="adapter_type_disk">Use Disk</label>

		<input type="radio" name="adapter_type" id="adapter_type_s3" value="S3" />
		<label class="adapter-label" for="adapter_type_s3">Use Amazon S3</label>

		<input type="radio" name="adapter_type" id="adapter_type_ormuco" value="Ormuco" />
		<label  class="adapter-label" for="adapter_type_ormuco">Use Ormuco Object Storage</label>

		<br><br>

		<div id="Disk_adapter_details" class="adapter_details">
			<label> Disk Adapter Path: </label>
			<span>Default Path : <b id="disk_path_label">/var/www/html/olympus/api/files/</b></span>
			<input type="hidden" id="disk_path" name="disk_path" value="/var/www/html/olympus/api/files/" >
			<!-- <input type="file" class="disk-path" placeholder="" value="" id="disk_path" name="disk_path" nwdirectory nwsaveas webkitdirectory directory multiple> -->
			<br><br>
			<input type="checkbox" name="mount_cifs" id="mount_cifs" /> Mount a CIFS share :
			<br><br>
			<div id="cifs_details" style="display: none;">
				<label> CIFS Mountpoint :</label>
				<input type="text" class="mountpoint" placeholder="" value="" id="mountpoint" name="mountpoint">
				<label> Username :</label>
				<input type="text" class="mount-username" placeholder="" value="" id="mount_username" name="mount_username">
				<label> Password :</label>
				<input type="password" class="mount-password" placeholder="" value="" id="mount_password" name="mount_password">
				<br>
				<input type="button" id="cifsmount" value="Mount">
				<input type="button" id="cifsunmount" value="Unmount">
			</div>
		</div>

		<div id="S3_adapter_details" class="adapter_details" style="display:none;">
			<label> Access Key Id :</label>
			<input type="text" class="S3-access" placeholder="" value="" id="S3_access" name="S3_access">

			<label> Secret Access Key :</label>
			<input type="text" class="S3-secret" placeholder="" value="" id="S3_secret" name="S3_secret">

			<label> Bucket :</label>
			<input type="text" class="S3-bucket" placeholder="" value="" id="S3_bucket" name="S3_bucket">

			<label> Region :</label>
			<input type="text" class="S3-region" placeholder="" value="" id="S3_region" name="S3_region"><br>
		</div>

		<div id="Ormuco_adapter_details" class="adapter_details" style="display:none;">
			<label> Ormuco Username:</label>
			<input type="text" class="Ormuco-access" placeholder="" value="" id="Ormuco_access" name="Ormuco_access">

			<label> Ormuco Password :</label>
			<input type="password" class="Ormuco-secret" placeholder="" value="" id="Ormuco_secret" name="Ormuco_secret">

			<label> Container name :</label>
			<input type="text" class="Ormuco-bucket" placeholder="" value="" id="Ormuco_bucket" name="Ormuco_bucket">

			<!--<label> Region :</label>
			<input type="text" class="Ormuco-region" placeholder="" value="" id="Ormuco_region" name="Ormuco_region"><br>-->
		</div>
	    <input type="button" id="saveAdapter" value="Save">
		<br><br>
	</div>
