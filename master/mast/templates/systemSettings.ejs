		<!--Dropbox Settings -->
		<div id="dropbox_cont" class="email-mod">
			<label>Dropbox Settings</label>
			<input id="dropbox_setting" type="checkbox" name="dropbox_setting" value="enabled" /> Enable Syncing of Dropbox Folders
			<br>
			<div id="dropbox_details" style="display:none;">

				<label> App Key : </label>
				<input type="text" class="dropbox-client-id" placeholder="" value="" id="dropbox_client_id" name="dropbox_client_id"><br>
				<label> App Secret : </label>
				<input type="text" class="dropbox-client-secret" placeholder="" value="" id="dropbox_client_secret" name="dropbox_client_secret"><br>
			</div>
			<input type="button" id="saveDropbox" value="Save">
			<img class="dropbox-loader" alt="loading..." src="/images/ajax-loader.gif">
			<br><br>
		</div>
		<!-- -->
		<!--Box Settings -->
		<div id="box_cont" class="email-mod">
			<label>Box Settings</label>
			<input id="box_setting" type="checkbox" name="box_setting" value="enabled" /> Enable Syncing of Box Folders
			<br>
			<div id="box_details" style="display:none;">
				<label> Client ID : </label>
				<input type="text" class="box-client-id" placeholder="" value="" id="box_client_id" name="box_client_id"><br>

				<label> Client Secret : </label>
				<input type="text" class="box-client-secret" placeholder="" value="" id="box_client_secret" name="box_client_secret"><br>
			</div>
			<input type="button" id="saveBox" value="Save">
			<img class="box-loader" alt="loading..." src="/images/ajax-loader.gif">
			<br><br>
		</div>
