<div class="account-profile-mobile-template clearfix">
	<form action="/account/update" method="POST" class="account-details-form">
	  <fieldset>
	  	<div class="clearfix">
		    <label for="name">Name</label>
		    <input id="name" name="name" type="text" value="{{name}}" />
		  </div>
		 	<div class="clearfix">
		    <label for="title">Position</label>
		    <input id="title" name="title" type="text" value="{{job_title}}"/>
		  </div>
		  <div class="clearfix">
		    <label for="emails">Email</label>
		    <input id="email" name="email" type="text" value="{{email}}" />
		  </div>
		  <div class="clearfix">
		    <label for="phone">Phone</label>
		    <input id="phone" name="phone" type="text" value="{{phoneNumber}}" />
	  	</div>
	  </fieldset>
    <div class="submit-button submit-details">Update</div>
	</form>
</div>